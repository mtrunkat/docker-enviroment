<VirtualHost *:80>
  DocumentRoot /var/www
  VirtualDocumentRoot /var/www/%2/web/

  ServerName locweb
  ServerAlias www.*.locweb

  <Directory /var/www/%2>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>

<VirtualHost *:80>
  DocumentRoot /var/www
  VirtualDocumentRoot /var/www/%1/web

  ServerName locweb
  ServerAlias *.locweb

  <Directory /var/www/%1>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>