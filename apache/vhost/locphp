<VirtualHost *:80>
  DocumentRoot /var/www
  VirtualDocumentRoot /var/www/%2/php/

  ServerName locphp
  ServerAlias www.*.locphp

  <Directory /var/www/%2>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>

<VirtualHost *:80>
  DocumentRoot /var/www
  VirtualDocumentRoot /var/www/%1/php

  ServerName locphp
  ServerAlias *.locphp

  <Directory /var/www/%1>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>